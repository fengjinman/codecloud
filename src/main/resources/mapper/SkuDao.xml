<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.SkuDao">
    <insert id="insertSku" >
        <![CDATA[
        insert into sku(
        username,
        skuname,
        skuprice,
        unit,
        describtion,
        img
        ) values(
        #{username},
        #{skuname},
        #{skuprice},
        #{unit},
        #{describtion},
        #{img}
        )
        ]]>
    </insert>

</mapper>