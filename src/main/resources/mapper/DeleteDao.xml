<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.DeleteDao">

    <delete id="deleteClass">
        delete from bigclass where id = #{classid}
    </delete>

    <delete id="deleteBrand">
        delete from brand where id = #{brandid}
    </delete>

    <delete id="deleteSpu">
        delete from spu where id = #{spuid}
    </delete>


    <delete id="deleteAttr">
        delete from attr where id = #{attrid}
    </delete>

    <delete id="deleteSku">
        delete from sku where id = #{skuid}
    </delete>
    <!--//批量-->
    <delete id="deleteClassByList">
        delete from bigclass where id in
        <foreach item="classid" collection="list" open="(" separator="," close=")">
            #{classid}
        </foreach>
    </delete>

    <delete id="deleteBrandByList">
        delete from brand where id in
        <foreach item="brandid" collection="list" open="(" separator="," close=")">
            #{brandid}
        </foreach>
    </delete>

    <delete id="deleteSpuByList">
        delete from spu where id in
        <foreach item="spuid" collection="list" open="(" separator="," close=")">
            #{spuid}
        </foreach>
    </delete>

    <delete id="deleteAttrByList">
        delete from attr where id in
        <foreach item="attrid" collection="list" open="(" separator="," close=")">
            #{attrid}
        </foreach>
    </delete>

    <delete id="deleteSkuByList">
        delete from sku where id in
        <foreach item="skuid" collection="list" open="(" separator="," close=")">
            #{skuid}
        </foreach>
    </delete>

</mapper>