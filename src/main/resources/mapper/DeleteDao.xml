        delete from spu where id in
        <foreach item="spuid" collection="list" open="(" separator="," close=")">
            #{spuid}
        </foreach>
    </delete>

    <!--@TargetDataSource("test2")-->
    <!--int deleteAttrByList(List<Integer> attrids);-->
    <delete id="deleteAttrByList">
        delete from attr where id in
        <foreach item="attrid" collection="list" open="(" separator="," close=")">
            #{attrid}
        </foreach>
    </delete>

    <!--@TargetDataSource("test2")-->
    <!--int deleteSkuByList(List<Integer> skuids);-->
    <delete id="deleteSkuByList">
        delete from sku where id in
        <foreach item="skuid" collection="list" open="(" separator="," close=")">
            #{skuid}
        </foreach>
    </delete>

</mapper>